<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".DoctorActivity">

    <LinearLayout
        android:id="@+id/linearLayoutDoctors"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43"></LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="483dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutDoctors"
        app:srcCompat="@drawable/pic_9_1" />

    <TextView
        android:id="@+id/textViewChooseDocktor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбор специалиста"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutDoctors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>